{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "dist"],
  "include": ["src/**/*.ts"]
}
